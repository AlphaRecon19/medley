{% extends "base.html.twig" %}

{% block body %}
    <div class="centered registration__form">
        <div class="container">
            {{ form_start(form) }}

                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first) }}
                {{ form_row(form.plainPassword.second) }}

                <button type="submit">Register!</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}